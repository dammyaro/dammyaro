<style>
  .experience {
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }

  .experience-bg-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 12s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(75, 192, 192, 0.3) 0%, transparent 50%);
    top: 20%;
    right: 15%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255, 206, 84, 0.3) 0%, transparent 50%);
    bottom: 30%;
    left: 20%;
    animation-delay: 6s;
  }

  .experience-header {
    text-align: center;
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 2rem;
    backdrop-filter: blur(20px);
  }

  .section-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 2rem;
    letter-spacing: -0.03em;
  }

  .section-title span {
    display: block;
  }

  .section-description {
    font-size: 1.3rem;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  .experience-timeline {
    position: relative;
    z-index: 1;
    display: grid;
    gap: 2.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .experience-card {
    position: relative;
    border-radius: 24px;
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    animation-delay: var(--delay);
  }

  .experience-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at center, rgba(102, 126, 234, 0.05) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .experience-card:hover::before {
    opacity: 1;
  }

  .experience-card:hover {
    transform: translateY(-8px);
    border-color: rgba(102, 126, 234, 0.3);
    box-shadow: var(--shadow-xl);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    padding: 2.5rem 2.5rem 0;
    margin-bottom: 2rem;
  }

  .company-logo {
    position: relative;
    flex-shrink: 0;
  }

  .company-logo img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    border-radius: 16px;
    border: 1px solid var(--border-color);
  }

  .logo-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--glass-bg);
    border-radius: 16px;
    font-size: 2.5rem;
    border: 1px solid var(--border-color);
    backdrop-filter: blur(10px);
  }

  .logo-placeholder.startup {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.1));
    border-color: rgba(16, 185, 129, 0.3);
  }

  .logo-placeholder.intern {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(37, 99, 235, 0.1));
    border-color: rgba(59, 130, 246, 0.3);
  }

  .logo-glow {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: conic-gradient(from 0deg, transparent, rgba(102, 126, 234, 0.4), transparent);
    border-radius: 18px;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
  }

  .experience-card:hover .logo-glow {
    opacity: 1;
    animation: spin 3s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .position-info {
    flex: 1;
  }

  .position-info h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .position-info h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .meta-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }

  .location {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .period {
    padding: 0.4rem 1rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .period.current {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
  }

  .period.founder {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
  }

  .period.intern {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    color: white;
  }

  .period:not(.current):not(.founder):not(.intern) {
    background: var(--glass-bg);
    color: var(--text-secondary);
    border: 1px solid var(--border-color);
  }

  .achievements-section {
    padding: 0 2.5rem 1.5rem;
  }

  .achievements-section h5 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .achievement-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background: var(--glass-bg);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .achievement-item:hover {
    background: rgba(102, 126, 234, 0.05);
    border-color: rgba(102, 126, 234, 0.2);
    transform: translateY(-2px);
  }

  .achievement-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--glass-bg);
    border-radius: 10px;
    border: 1px solid var(--border-color);
  }

  .achievement-item p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  .project-showcase {
    display: flex;
    gap: 1rem;
    padding: 2.5rem;
    border-top: 1px solid var(--border-color);
    flex-wrap: wrap;
  }

  .project-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.85rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-tag::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    transition: left 0.4s ease;
    z-index: -1;
  }

  .project-tag.featured {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    color: #1f2937;
  }

  .project-tag.featured::before {
