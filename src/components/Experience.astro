<style>
  .experience {
    padding: 6rem 0;
    background: #000000;
  }

  .experience-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 1.8rem;
    text-align: center;
    margin-bottom: 1rem;
    color: #f1f5f9;
    opacity: 0.95;
  }

  .section-subtitle {
    font-size: 0.9rem;
    text-align: center;
    color: #94a3b8;
    margin-bottom: 4rem;
    opacity: 0.7;
  }

  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 60px;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(to bottom, #60a5fa, #3b82f6);
    border-radius: 2px;
  }

  .experience-item {
    position: relative;
    margin-bottom: 4rem;
    padding-left: 140px;
    display: flex;
    align-items: flex-start;
    gap: 2rem;
  }

  .company-logo {
    position: absolute;
    left: 0;
    top: 0;
    width: 120px;
    height: 120px;
    background: #1e293b;
    border: 4px solid #60a5fa;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    z-index: 1;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .company-logo:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
    border-color: #3b82f6;
  }

  .company-logo img {
    width: 90%;
    height: 90%;
    object-fit: contain;
    border-radius: 12px;
  }

  .experience-content {
    background: #1e293b;
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .experience-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #60a5fa, #3b82f6);
  }

  .experience-content:hover {
    border-color: rgba(96, 165, 250, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
  }

  .experience-header {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    margin-bottom: 1.5rem;
    align-items: start;
  }

  .experience-title-group h3 {
    color: #60a5fa;
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
    opacity: 0.95;
  }

  .experience-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-align: right;
  }

  .location {
    color: #94a3b8;
    font-size: 0.75rem;
    font-weight: 500;
    opacity: 0.7;
  }

  .period {
    color: #fbbf24;
    font-size: 0.75rem;
    font-weight: 600;
    background: rgba(251, 191, 36, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    border: 1px solid rgba(251, 191, 36, 0.3);
    opacity: 0.9;
  }

  .experience-content h4 {
    color: #f1f5f9;
    font-size: 1rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
    opacity: 0.8;
  }

  .achievements {
    list-style: none;
    margin-bottom: 1.5rem;
  }

  .achievements li {
    color: #94a3b8;
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
    opacity: 0.7;
    font-size: 0.8rem;
  }

  .achievements li::before {
    content: '‚ñ∏';
    position: absolute;
    left: 0;
    color: #60a5fa;
    font-weight: bold;
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .project-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: rgba(96, 165, 250, 0.1);
    color: #60a5fa;
    border: 1px solid rgba(96, 165, 250, 0.3);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .project-badge:hover {
    background: rgba(96, 165, 250, 0.2);
    border-color: #60a5fa;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .timeline::before {
      left: 40px;
    }

    .experience-item {
      padding-left: 100px;
      margin-bottom: 3rem;
    }

    .company-logo {
      width: 80px;
      height: 80px;
      font-size: 1.5rem;
      border-radius: 16px;
    }

    .company-logo img {
      width: 85%;
      height: 85%;
      border-radius: 8px;
    }

    .experience-header {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .experience-meta {
      text-align: left;
      flex-direction: row;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .experience-title-group h3 {
      font-size: 1.25rem;
    }

    .experience-content {
      padding: 2rem;
    }

    .experience-content h4 {
      font-size: 1.1rem;
    }

    .period {
      padding: 0.2rem 0.6rem;
      font-size: 0.8rem;
    }
  }
</style>