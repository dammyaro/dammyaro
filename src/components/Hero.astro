---
// Hero section component
---

<section id="home" class="hero">
  <div class="hero-bg-effects">
    <div class="floating-orb orb-1"></div>
    <div class="floating-orb orb-2"></div>
    <div class="floating-orb orb-3"></div>
  </div>
  
  <div class="container">
    <div class="hero-grid">
      <div class="hero-content animate-fade-in-up">
        <div class="hero-badge glass">
          <span class="gradient-text">âœ¨ Full Stack Developer & Software Architect</span>
        </div>
        
        <h1 class="hero-title">
          <span class="title-line">Building the</span>
          <span class="title-line gradient-text">Future of Web</span>
          <span class="title-line">One App at a Time</span>
        </h1>
        
        <p class="hero-description">
          Transforming complex business challenges into elegant, scalable digital solutions. 
          With 8 years of expertise in full-stack development, I craft experiences that users love and businesses thrive on.
        </p>
        
        <div class="hero-stats glass">
          <div class="stat-item">
            <div class="stat-number gradient-text">8+</div>
            <div class="stat-label">Years Experience</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number gradient-text">50+</div>
            <div class="stat-label">Projects Delivered</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number gradient-text">15+</div>
            <div class="stat-label">Happy Clients</div>
          </div>
        </div>
        
        <div class="hero-actions">
          <a href="#portfolio" class="btn btn-primary">
            <span>Explore My Work</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="#contact" class="btn btn-secondary glass">
            <span>Let's Connect</span>
          </a>
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
  .hero {
    height: 120vh;
    display: flex;
    align-items: center;
    position: relative;
    padding: 0;
    overflow: hidden;
  }

  .hero-bg-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .floating-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    animation: float 8s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.4) 0%, transparent 50%);
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(245, 101, 101, 0.3) 0%, transparent 50%);
    top: 60%;
    right: 10%;
    animation-delay: 2s;
  }

  .orb-3 {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, transparent 50%);
    bottom: 20%;
    left: 50%;
    animation-delay: 4s;
  }

  .hero-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    padding: 22rem 2rem 4rem;
    height: 100%;
    min-height: 120vh;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 2rem;
    animation: glow 3s ease-in-out infinite;
  }

  .hero-title {
    font-size: 4.2rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 2rem;
    letter-spacing: -0.03em;
  }

  .title-line {
    display: block;
    margin-bottom: 0.75rem;
  }

  .hero-description {
    font-size: 1.3rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 3rem;
    max-width: 85%;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    padding: 2rem 3rem;
    border-radius: 20px;
    margin-bottom: 3rem;
    backdrop-filter: blur(20px);
    min-width: 500px;
  }

  .stat-item {
    text-align: center;
    flex: 1;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border-color);
    margin: 0 1rem;
  }

  .hero-actions {
    display: flex;
    gap: 2.5rem;
    align-items: center;
    margin-top: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 2.5rem;
    border-radius: 16px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn-primary {
    background: var(--primary-gradient);
    color: white;
    box-shadow: var(--shadow-lg);
  }

  .btn-primary:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: var(--shadow-xl);
  }

  .btn-secondary {
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

  .btn-secondary:hover {
    transform: translateY(-2px);
    border-color: rgba(102, 126, 234, 0.5);
  }



  @media (max-width: 1024px) {
    .hero-content {
      max-width: 800px;
      padding: 20rem 1.5rem 3rem;
    }
    
    .hero-title {
      font-size: 3.8rem;
    }
    
    .hero-description {
      font-size: 1.2rem;
      max-width: 85%;
    }
    
    .hero-stats {
      min-width: 450px;
      padding: 1.75rem 2.5rem;
    }
    
    .stat-number {
      font-size: 2.2rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      height: 110vh;
    }
    
    .hero-content {
      max-width: 100%;
      padding: 18rem 1rem 3rem;
      min-height: 110vh;
      justify-content: space-between;
    }
    
    .hero-title {
      font-size: 3.2rem;
    }
    
    .title-line {
      margin-bottom: 0.5rem;
    }
    
    .hero-description {
      font-size: 1.15rem;
      max-width: 95%;
    }
    
    .hero-stats {
      padding: 1.5rem 2rem;
      min-width: auto;
      width: 100%;
      max-width: 400px;
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    .stat-label {
      font-size: 0.8rem;
    }
    
    .hero-actions {
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
      max-width: 300px;
      padding: 1.1rem 2rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      height: 100vh;
    }
    
    .hero-content {
      padding: 16rem 1rem 2rem;
      min-height: 100vh;
    }
    
    .hero-title {
      font-size: 2.8rem;
    }
    
    .hero-description {
      font-size: 1.1rem;
      line-height: 1.6;
    }
    
    .hero-stats {
      padding: 1.25rem 1.5rem;
      min-width: auto;
    }
    
    .stat-number {
      font-size: 1.8rem;
    }
    
    .stat-label {
      font-size: 0.75rem;
    }
    
    .btn {
      padding: 1rem 1.75rem;
      font-size: 0.95rem;
      max-width: 280px;
    }
  }

  @media (min-height: 1200px) {
    .hero-content {
      padding: 25rem 2rem 8rem;
    }
  }

  @media (max-height: 800px) and (min-width: 769px) {
    .hero {
      height: 100vh;
    }
    
    .hero-content {
      padding: 18rem 2rem 3rem;
      min-height: 100vh;
      justify-content: space-between;
    }
    
    .hero-title {
      font-size: 3.8rem;
    }
    
    .hero-description {
      font-size: 1.2rem;
      margin-bottom: 2rem;
    }
    
    .hero-stats {
      padding: 1.75rem 2.5rem;
      margin-bottom: 2rem;
    }
    
    .stat-number {
      font-size: 2.2rem;
    }
  }

  @media (max-height: 700px) and (min-width: 769px) {
    .hero-content {
      padding: 16rem 2rem 2rem;
    }
    
    .hero-title {
      font-size: 3.4rem;
      margin-bottom: 1.5rem;
    }
    
    .hero-description {
      font-size: 1.1rem;
      margin-bottom: 1.5rem;
    }
    
    .hero-stats {
      padding: 1.5rem 2.25rem;
      margin-bottom: 1.5rem;
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    .btn {
      padding: 1rem 2rem;
      font-size: 1rem;
    }
  }
</style>