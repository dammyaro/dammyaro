<style>
  .footer {
    padding: 120px 0 0;
    position: relative;
    overflow: hidden;
  }

  .footer-bg-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.2) 0%, transparent 50%);
    top: 20%;
    left: 20%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.2) 0%, transparent 50%);
    bottom: 30%;
    right: 20%;
    animation-delay: 10s;
  }

  .footer-content {
    position: relative;
    z-index: 1;
  }

  .footer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3rem 0;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 3rem;
  }

  .brand-section {
    flex: 1;
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .logo-icon {
    font-size: 2.5rem;
    animation: float 3s ease-in-out infinite;
  }

  .logo-text {
    letter-spacing: -0.02em;
  }

  .brand-tagline {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 400px;
  }

  .footer-cta {
    text-align: right;
  }

  .footer-cta h3 {
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--primary-gradient);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea, #764ba2);
    transition: left 0.4s ease;
    z-index: -1;
  }

  .cta-button:hover::before {
    left: 0;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-links {
    display: flex;
    gap: 4rem;
    flex: 1;
  }

  .footer-section {
    flex: 1;
  }

  .footer-section h4 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .footer-section ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-section ul li {
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: color 0.3s ease;
  }

  .footer-section ul li:hover {
    color: var(--text-primary);
  }

  .footer-section a {
    color: var(--text-secondary);
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--text-primary);
  }

  .footer-extra {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    min-width: 250px;
  }

  .availability-status {
    padding: 1.5rem;
    background: var(--glass-bg);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    backdrop-filter: blur(20px);
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .status-dot {
    width: 10px;
    height: 10px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.4);
  }

  .status-indicator span {
    font-size: 0.9rem;
    font-weight: 600;
    color: #22c55e;
  }

  .tech-showcase {
    padding: 1.5rem;
    background: var(--glass-bg);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    backdrop-filter: blur(20px);
  }

  .tech-label {
    display: block;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-item {
    padding: 0.4rem 0.8rem;
    background: rgba(102, 126, 234, 0.1);
    border: 1px solid rgba(102, 126, 234, 0.2);
    border-radius: 8px;
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item,
  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: var(--text-primary);
  }

  .contact-icon {
    font-size: 1rem;
    width: 20px;
    text-align: center;
    opacity: 0.8;
  }

  .footer-bottom {
    border-top: 1px solid var(--border-color);
    padding: 2rem 0;
    position: relative;
    z-index: 1;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  .footer-meta span {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 1024px) {
    .footer-header {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .footer-cta {
      text-align: center;
    }

    .footer-main {
      flex-direction: column;
      gap: 3rem;
    }

    .footer-links {
      gap: 3rem;
    }

    .footer-extra {
      flex-direction: row;
      justify-content: center;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 80px 0 0;
    }

    .footer-header {
      padding: 2rem 0;
    }

    .footer-links {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-extra {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .availability-status,
    .tech-showcase {
      max-width: 300px;
      width: 100%;
      text-align: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .footer-header {
      padding: 1.5rem 0;
    }

    .brand-tagline {
      text-align: center;
    }

    .tech-stack {
      justify-content: center;
    }
  }
</style>