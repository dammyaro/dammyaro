<style>
  .portfolio {
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }

  .portfolio-bg-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 12s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(245, 101, 101, 0.3) 0%, transparent 50%);
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.3) 0%, transparent 50%);
    bottom: 20%;
    right: 20%;
    animation-delay: 6s;
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 2rem;
    backdrop-filter: blur(20px);
  }

  .section-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 2rem;
    letter-spacing: -0.03em;
  }

  .section-title span {
    display: block;
  }

  .section-description {
    font-size: 1.3rem;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2.5rem;
    position: relative;
    z-index: 1;
  }

  .project-card {
    position: relative;
    border-radius: 24px;
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    animation-delay: var(--delay);
    display: flex;
    flex-direction: column;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at center, rgba(102, 126, 234, 0.05) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-card:hover {
    transform: translateY(-12px);
    border-color: rgba(102, 126, 234, 0.3);
    box-shadow: var(--shadow-xl);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 2rem 2rem 0;
    margin-bottom: 1.5rem;
  }

  .project-icon {
    position: relative;
  }

  .icon-bg {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--glass-bg);
    border-radius: 20px;
    font-size: 2.5rem;
    border: 1px solid var(--border-color);
    backdrop-filter: blur(10px);
    position: relative;
  }

  .icon-bg.featured {
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.2), rgba(245, 158, 11, 0.1));
    border-color: rgba(251, 191, 36, 0.3);
  }

  .icon-bg.blockchain {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(147, 51, 234, 0.1));
    border-color: rgba(168, 85, 247, 0.3);
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .project-type {
    font-size: 0.8rem;
    color: var(--text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .project-platforms {
    display: flex;
    gap: 0.5rem;
  }

  .platform {
    font-size: 1.2rem;
    color: var(--text-secondary);
  }

  .featured-badge, .research-badge, .seo-badge, .blockchain-badge, .govt-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .featured-badge {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    color: #1f2937;
  }

  .research-badge {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
  }

  .seo-badge {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    color: white;
  }

  .blockchain-badge {
    background: linear-gradient(135deg, #a855f7, #9333ea);
    color: white;
  }

  .govt-badge {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
  }

  .project-content {
    padding: 0 2rem;
    flex: 1;
  }

  .project-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .project-content p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-tag {
    padding: 0.25rem 0.75rem;
    background: var(--glass-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    padding: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    transition: left 0.4s ease;
    z-index: -1;
  }

  .project-link.primary {
    background: var(--primary-gradient);
    color: white;
    border: none;
  }

  .project-link.primary::before {
    background: linear-gradient(135deg, #5a67d8, #667eea);
  }

  .project-link.secondary {
    background: var(--glass-bg);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

  .project-link.secondary::before {
    background: var(--primary-gradient);
  }

  .project-link:hover::before {
    left: 0;
  }

  .project-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .project-link.secondary:hover {
    color: white;
    border-color: rgba(102, 126, 234, 0.5);
  }

  @media (max-width: 1024px) {
    .section-title {
      font-size: 3.5rem;
    }
    
    .projects-grid {
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .portfolio {
      padding: 80px 0;
    }
    
    .section-title {
      font-size: 2.8rem;
    }
    
    .section-description {
      font-size: 1.1rem;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .project-header {
      padding: 1.5rem 1.5rem 0;
    }
    
    .project-content {
      padding: 0 1.5rem;
    }
    
    .project-links {
      padding: 1.5rem;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .project-link {
      justify-content: center;
    }
  }
</style>